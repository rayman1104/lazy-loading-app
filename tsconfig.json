{
  "compileOnSave": true,
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
//    "lib": [
//      "dom",
//      "es5",
//      "es2015.collection",
//      "es2015.iterable",
//      "es2015.promise"
//    ],
    "rootDirs": [
      "./apps/lazy-loading-app/src",
      "./dist/bin/apps/lazy-loading-app/src"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/api-interface": [
        "libs/api-interface/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
